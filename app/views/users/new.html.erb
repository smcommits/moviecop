<section class="form-section position-absolute">
  <div>
    <%= simple_form_for @user, html: {class: "p-5 shadow-lg rounded"} do |f| %>
      <div class="form-group">
        <%= f.input :username, placeholder: 'Enter your Username', 
          input_html: { class: 'form-control' }, wrapper: false%>
      </div>

      <div class="form-group">
        <%= f.input :fullname, placeholder: "Full Name",
          label: "Full Name" ,input_html: { class: 'form-control' }, wrapper: false%>
      </div>


      <%=f.submit "Create Account", class: 'btn btn-dark w-100' %>
      <div class="mt-3 text-align-center">
        <span>Have an Account?</span>
        <%= link_to "Login", login_path %>
      </div>
  
    <%end%>
  </div>
</section>
