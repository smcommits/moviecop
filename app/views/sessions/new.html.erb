  <section class="form-section position-absolute">
    <div>
      <%= form_with url: login_path, class: "p-5 shadow-lg rounded" do |f| %>
        <div class="form-group">
          <%= f.label :username %>
          <%= f.text_field :username, class: "form-control" %>
        </div>
        <%= f.submit "Log In", class: "btn btn-dark w-100" %> 
        <div class="mt-3 text-align-center">
          <span>Don't Have an Account?</span>
          <%= link_to "Sign Up", signup_path %>
        </div>
      <%end%> 
    </div>
  </section>


