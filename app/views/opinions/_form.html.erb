<%= simple_form_for  @opinion, html: {class: 'shadow rounded p-3 mt-5 overflow-auto'} do |f| %>
        <%= f.error_notification %>
        <div class="form-group">
        <%= f.input :text, label: "So, what's your movie opinion? ", wrapper: false, placeholder: "Present a new Opinion", 
          input_html: {class: 'form-control'}, 
          label_html: {class: "opinion-label text-uppercase font-weight-bold text-secondary"} %>
      </div>
      <%=f.submit "Opinionate", class: 'btn btn-dark float-right' %>
    <%end%>
